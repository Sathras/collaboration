<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Collaboration Tool">
    <meta name="author" content="Alexander Fuchsberger">

    <title>Collaboration Tool</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body
    data-path="<%= @conn.request_path %>"
    data-js-view-name="<%= js_view_name(@conn, @view_template) %>"

    <%= if @current_user do %>
      data-admin="<%= @current_user.admin %>"
      data-user_id="<%= @current_user.id %>"
    <% else %>
      data-admin="false"
      data-user_id="null"
    <% end %>
  >

    <nav class="navbar sticky-top navbar-expand-sm navbar-dark bg-dark mb-3">
      <div class="container">
        <a class="navbar-brand" href="/topics">Idea Hub</a>

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#menuList"
          aria-controls="menuList"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="menuList">
          <ul class="navbar-nav mr-auto list">
            <li class="nav-item menulink" data-order="0">
              <a class="link menutitle nav-link" href="/topics">Home</a>
            </li>
            <%= for topic <- @conn.assigns.menutopics do %>
              <li class="nav-item" data-id="<%= topic.id %>" data-order="<%= topic.order %>">
                <%= link(topic.menutitle,
                  to: "/topics/#{topic.id}",
                  class: "link menutitle nav-link")
                %>
              </li>
            <% end %>
          </ul>
          <ul id="menu-actions" class="navbar-nav">
            <!-- No current user (show login and register)-->
            <%= if !@current_user do %>
              <li class="<%= nav_class(@conn, "/login") %>">
                <%= link("Login", to: "/login", class: "nav-link") %>
              </li>
              <li class="<%= nav_class(@conn, "/register") %>">
                <%= link("Register", to: "/register", class: "nav-link") %>
              </li>
            <% end %>

            <!-- Current User (show settings and logout)-->
            <%= if @current_user do %>
              <li class="dropdown show">
                <a class="btn btn-light dropdown-toggle" href="#"
                  role="button" id="nav-actions" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false"
                ><%= @current_user.username %></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav-actions">
                  <%= if @current_user.admin do %>
                    <%= link("Administration", to: "/admin", class: "dropdown-item") %>
                    <div class="dropdown-divider"></div>
                  <% end %>
                  <%= link("Settings", to: "/settings", class: "dropdown-item") %>
                  <%= link("Logout", to: "/logout", class: "dropdown-item") %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">

      <!-- Info Messages -->
      <%= if info = get_flash(@conn, :info) do %>
        <p class="alert alert-info alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= info %>
        </p>
      <% end %>

      <!-- Error Messages -->
      <%= if error = get_flash(@conn, :error) do %>
        <p class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= error %>
        </p>
      <% end %>

      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>
    </div> <!-- /container -->
    <script>window.userToken = "<%= assigns[:user_token] %>"</script>
    <script src="https://use.fontawesome.com/f7ab62c769.js"></script>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=zdhtiwkfuljahr0sjfvhsqskjalyt5wqeikdzyzq433qlu71"></script>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
