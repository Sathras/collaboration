<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Collaboration Tool">
    <meta name="author" content="Alexander Fuchsberger">

    <title>Collaboration Tool</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
      <div class="container">
        <a class="navbar-brand" href="/">Idea Hub</a>

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarText"
          aria-controls="navbarText"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <%= for topic <- @conn.assigns.topics do %>
              <%= if !topic.hidden do %>
                <li class="nav-item active">
                  <%= link(topic.menutitle, to: "/topics/#{topic.id}", class: "nav-link") %>
                </li>
              <% end %>
            <% end %>
          </ul>
          <ul class="navbar-nav">
            <!-- No current user (show login and register)-->
            <%= if !@current_user do %>
              <li class="<%= nav_class(@conn, "/login") %>">
                <%= link("Login", to: "/login", class: "nav-link") %>
              </li>
              <li class="<%= nav_class(@conn, "/register") %>">
                <%= link("Register", to: "/register", class: "nav-link") %>
              </li>
            <% end %>

            <!-- Current User (show settings and logout)-->
            <%= if @current_user do %>
              <li class="nav-item mr-2">
                <button class="btn btn-primary" data-toggle="modal" data-target="#modal-instructions">Instructions</button>
              </li>

              <li class="dropdown show">
                <a class="btn btn-light dropdown-toggle" href="#"
                  role="button" id="nav-actions" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false"
                ><%= @current_user.username %></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav-actions">
                  <%= if @current_user.admin do %>
                    <%= link("Administration", to: "/admin", class: "dropdown-item") %>
                    <div class="dropdown-divider"></div>
                  <% end %>
                  <%= link("Settings", to: "/settings", class: "dropdown-item") %>
                  <%= link("Logout", to: "/logout", class: "dropdown-item") %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">

      <!-- Info Messages -->
      <%= if info = get_flash(@conn, :info) do %>
        <p class="alert alert-info alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= info %>
        </p>
      <% end %>

      <!-- Error Messages -->
      <%= if error = get_flash(@conn, :error) do %>
        <p class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= error %>
        </p>
      <% end %>

      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>

      <%= if @current_user do %>
      <div class="modal fade" id="modal-instructions" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Instructions</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= raw(@conn.assigns.instructions) %>
            </div>
          </div>
        </div>
      </div>
      <% end %>

    </div> <!-- /container -->
    <script>window.userToken = "<%= assigns[:user_token] %>"</script>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=zdhtiwkfuljahr0sjfvhsqskjalyt5wqeikdzyzq433qlu71"></script>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
