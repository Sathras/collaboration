<div
  class="alert alert-dismissible alert-<%= @color %> fade show text-center"
  role="alert"
>
  <i class="float-left mr-2 fas <%= @icon %>"></i>
  <span><%= @message %></span>
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
